@{
    Layout = "_Layout";
}
@model Car
<h3>Вы уверены удалить машину?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Название машины
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
           Краткое описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.shortDesc)
        </dd>
        <dt class="col-sm-2">
            Цена машины
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListView" asp-controller="Cars">Back to List</a>
    </form>
</div>
