@model Order
@{ Layout = "_Layout";}
<div class="row">
    <h3>Оформление заказа </h3>
    <div class="col-md-4">
        <form asp-action="Checkout" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="name">Имя</label>
                    <input asp-for="name" class="form-control" s />
                    <span asp-validation-for="name" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="surname">Фамилия</label>
                    <input asp-for="surname" class="form-control" />
                    <span asp-validation-for="surname" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="adress">Адрес</label>
                    <input asp-for="adress" class="form-control" />
                    <span asp-validation-for="adress" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="phone">Телефон</label>
                    <input asp-for="phone" class="form-control" />
                    <span asp-validation-for="phone" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email">Еmail</label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="alert-danger"></span>
                </div>
            <input class="btn btn-success" type="submit" value="Завершить заказ" />
        </form>

    </div>
