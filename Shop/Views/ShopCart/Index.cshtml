@model ShopCartViewModel
@{ Layout = "_Layout";}
<div class="container">
    @foreach (var el in Model.ShopCart.ListShopItems)
    {
        <div class="alert alert-warning mt:3">
            <b>Автомобиль:</b> @el.Car.name<br />
            <b>Цена:</b>@el.Car.price<br />
        </div>}
    <hr />
    <a class="btn btn-success " asp-controller="Order" asp-action="Checkout">Оплатить</a>
    @*<button type="button" class="btn btn-success" asp-controller="Order" asp-action="Checkout"> Оплатить</button>*@

</div>